<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="300.0" prefWidth="400.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="createTourLogLabel" text="Create Tour Log" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label fx:id="tourLabel" text="Tour:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="tourComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" />

    <Label fx:id="dateLabel" text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" />

    <Label fx:id="commentLabel" text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextArea fx:id="commentField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS" />

    <Label fx:id="difficultyLabel" text="Difficulty:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="difficultyField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" />

    <Label fx:id="distanceLabel" text="Distance:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="distanceField" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.hgrow="ALWAYS" />

    <Label fx:id="durationLabel" text="Duration:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.hgrow="ALWAYS" />

    <Label fx:id="ratingLabel" text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.hgrow="ALWAYS" />

    <Button fx:id="createButton" text="Create" GridPane.rowIndex="8" GridPane.hgrow="ALWAYS" />
    <Button fx:id="cancelButton" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.hgrow="ALWAYS" />

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
</GridPane>