<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<!--ToDo Style auslagern (M)-->

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.icefish.tourplanner.client.controllers.TourLogDetailViewController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Tour Log Details" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 5px;" />

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Tour Name:" style="-fx-font-weight: bold;"/>
        <Label fx:id="nameLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Date:" style="-fx-font-weight: bold;"/>
        <Label fx:id="dateLabel" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Comment:" style="-fx-font-weight: bold;"/>
        <Label fx:id="commentLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Difficulty:" style="-fx-font-weight: bold;"/>
        <Label fx:id="difficultyLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Distance:" style="-fx-font-weight: bold;"/>
        <Label fx:id="distanceLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Duration:" style="-fx-font-weight: bold;"/>
        <Label fx:id="durationLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Rating:" style="-fx-font-weight: bold;"/>
        <Label fx:id="ratingLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <Button text="OK" style="-fx-font-size: 14px; -fx-padding: 5px 15px;" onAction="#handleClose" VBox.vgrow="ALWAYS"/>

</VBox>
