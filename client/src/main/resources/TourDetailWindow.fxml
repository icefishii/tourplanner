<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<!--ToDo Style auslagern-->

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.icefish.tourplanner.client.controllers.TourDetailViewController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Tour Details" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 5px;" />

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Name:" style="-fx-font-weight: bold;"/>
        <Label fx:id="nameLabel" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Description:" style="-fx-font-weight: bold;"/>
        <Label fx:id="descriptionLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="From:" style="-fx-font-weight: bold;"/>
        <Label fx:id="fromLocationLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="To:" style="-fx-font-weight: bold;"/>
        <Label fx:id="toLocationLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Transport:" style="-fx-font-weight: bold;"/>
        <Label fx:id="transportTypeLabel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <Button text="OK" style="-fx-font-size: 14px; -fx-padding: 5px 15px;" onAction="#handleClose" VBox.vgrow="ALWAYS"/>

</VBox>
