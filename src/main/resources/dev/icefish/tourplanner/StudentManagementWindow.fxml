<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="424.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.icefish.tourplanner.StudentManagementController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Titel -->
    <Label text="Student Management System">
        <font>
            <Font size="17.0" />
        </font>
    </Label>

    <!-- Buttons oben -->
    <ButtonBar prefHeight="40.0" prefWidth="250.0">
        <buttons>
            <Button fx:id="newButton" text="New" />
            <Button fx:id="editButton" text="Edit" />
            <Button fx:id="deleteButton" text="Delete" />
        </buttons>
    </ButtonBar>

    <!-- Tabelle -->
    <HBox prefHeight="200.0" prefWidth="360.0">
        <children>
            <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="360.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="174.666" text="Name" />
                    <TableColumn fx:id="semesterColumn" text="Semester" />
                </columns>
            </TableView>
        </children>
    </HBox>

    <!-- Buttons unten -->
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="okButton" text="Ok" />
            <Button fx:id="cancelButton" text="Cancel" />
        </buttons>
    </ButtonBar>

</VBox>
