<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="229.0" prefWidth="402.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.icefish.tourplanner.client.controllers.TourCreateViewController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="createTourLabel" text="Create Tour" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label fx:id="nameLabel" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="tourNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label fx:id="descriptionLabel" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="tourDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label fx:id="fromLabel" text="From:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="fromLocationField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label fx:id="toLabel" text="To:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="toLocationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="transportationModeLabel" text="Transportation Mode:" GridPane.columnIndex="0" GridPane.rowIndex="5">

      <GridPane.margin>
         <Insets bottom="10.0" right="10.0" />
      </GridPane.margin></Label>
    <ComboBox fx:id="transportTypeBox" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets bottom="10.0" />
      </GridPane.margin></ComboBox>

    <Button onAction="#onCreateButtonClick" text="Create" GridPane.rowIndex="8" />
    <Button onAction="#onCancelButtonClick" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
